
<%- include('./user/partials/admin/header') %>


<style>
    :root {
        --bg-dark: white;
        --bg-darker: #1e293b;
        --text-primary: #e2e8f0;
        --text-secondary: #94a3b8;
        --border-color: #334155;
        --accent-blue: #0ea5e9;
        --status-processing: #06b6d4;
        --status-cancelled: #64748b;
    }

    body {
        background-color: var(--bg-dark);
        color: var(--text-primary);
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    .orders-container {
        padding: 2rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
    }

    .search-container {
        position: relative;
        width: 300px;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem;
        padding-right: 3rem;
        background-color: var(--bg-darker);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        color: var(--text-primary);
    }

    .search-input:focus {
        outline: none;
        border-color: var(--accent-blue);
    }

    .search-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
    }

    .orders-table {
        background-color: var(--bg-darker);
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
        color: var(--text-primary);
    }

    .table th {
        background-color: var(--bg-dark);
        color: var(--text-secondary);
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.875rem;
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
    }

    .table td {
        padding: 1rem;
        border-bottom: 1px solid var(--border-color);
        vertical-align: middle;
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    .order-id {
        font-family: monospace;
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        display: inline-block;
    }

    .status-processing {
        background-color: rgba(6, 182, 212, 0.1);
        color: var(--status-processing);
    }

    .status-cancelled {
        background-color: rgba(100, 116, 139, 0.1);
        color: var(--status-cancelled);
    }

    .action-button {
        padding: 0.5rem 1rem;
        background-color: var(--bg-dark);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        color: var(--text-primary);
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.2s;
    }

    .action-button:hover {
        background-color: var(--border-color);
        color: var(--text-primary);
    }

    .rupee-symbol::before {
        content: 'â‚¹';
        margin-right: 0.25rem;
    }
</style>


<body>
    <div class="orders-container">
        <div class="page-header">
            <h1 class="page-title" style="color: black;">Orders</h1>
                <div class="search-container">
                    <form method="GET" action="/admin/orderList">
                        <input type="text" name="search" class="search-input" 
                            placeholder="Search by Order ID, Status, or Payment" 
                            value="<%= searchQuery %>">
                       
                    </form>
                </div>
        </div>

        <div class="orders-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>USER NAME</th>
                        <th>Date</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Payment Method</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(function(order) { %>
                        <tr>
                            <td class="order-id"><%= order.orderId %></td>
                            <td><%= order.userName %></td>
                            <td><%= new Date(order.date).toLocaleDateString('en-IN') %></td>
                            <td class="rupee-symbol"><%= order.totalAmount.toFixed(2) %></td>
                            <td>
                                <span class="status-badge status-<%= order.status.toLowerCase() %>">
                                    <%= order.status %>
                                </span>
                            </td>
                            <td><%= order.paymentMethod %></td>
                            <td>
                                <a href="/admin/orders/<%= order.orderId %>" class="action-button" style="color: black;">
                                    View
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>


<!-- pagination -->

<!--  Pagination -->
<div class="pagination-wrapper my-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
      <!-- Pagination Info -->
      <div class="pagination-info mb-3 mb-md-0">
        <span class="text-secondary">
          Showing <span class="fw-bold text-dark"><%= (pagination.currentPage - 1) * pagination.limit + 1 %></span> 
          to <span class="fw-bold text-dark"><%= Math.min(pagination.currentPage * pagination.limit, pagination.totalItems) %></span> 
          of <span class="fw-bold text-dark"><%= pagination.totalItems %></span> orders
        </span>
      </div>
  
      <!-- Pagination Controls -->
      <nav aria-label="Order pagination">
        <ul class="pagination pagination-md m-0">
          <!-- Previous button -->
          <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link border-0 rounded-start" 
               href="/admin/orderList?page=<%= pagination.currentPage - 1 %>&search=<%= searchQuery %>" 
               aria-label="Previous">
              <i class="bi bi-chevron-left small"></i>
            </a>
          </li>
  
          <% 
          // Smart pagination that shows limited page numbers
          let startPage = Math.max(1, pagination.currentPage - 2);
          let endPage = Math.min(pagination.totalPages, startPage + 4);
          
          // Adjust start if we're near the end
          if (endPage - startPage < 4 && startPage > 1) {
            startPage = Math.max(1, endPage - 4);
          }
          
          // Show first page and ellipsis if needed
          if (startPage > 1) { %>
            <li class="page-item">
              <a class="page-link border-0" href="/admin/orderList?page=1&search=<%= searchQuery %>">1</a>
            </li>
            <% if (startPage > 2) { %>
              <li class="page-item disabled">
                <span class="page-link border-0">...</span>
              </li>
            <% } %>
          <% } %>
  
          <!-- Page numbers -->
          <% for (let i = startPage; i <= endPage; i++) { %>
            <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
              <a class="page-link border-0 <%= pagination.currentPage === i ? 'rounded' : '' %>" 
                 href="/admin/orderList?page=<%= i %>&search=<%= searchQuery %>"><%= i %></a>
            </li>
          <% } %>
  
          <!-- Show last page and ellipsis if needed -->
          <% if (endPage < pagination.totalPages) { %>
            <% if (endPage < pagination.totalPages - 1) { %>
              <li class="page-item disabled">
                <span class="page-link border-0">...</span>
              </li>
            <% } %>
            <li class="page-item">
              <a class="page-link border-0" 
                 href="/admin/orderList?page=<%= pagination.totalPages %>&search=<%= searchQuery %>">
                <%= pagination.totalPages %>
              </a>
            </li>
          <% } %>
  
          <!-- Next button -->
          <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
            <a class="page-link border-0 rounded-end" 
               href="/admin/orderList?page=<%= pagination.currentPage + 1 %>&search=<%= searchQuery %>" 
               aria-label="Next">
              <i class="bi bi-chevron-right small"></i>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

    </div>

    <script>
        // Search functionality
        document.querySelector('.search-input').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
</body>